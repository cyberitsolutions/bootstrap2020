# -*-sh-*-

# Remove a handful of kernel drivers.
# Time and space savings negligible.
DISABLE_DM_VERITY=true          # Doesn't help; doesn't hurt.
DISABLE_CDROM=true              # Nobody has an optical drive anymore!
DISABLE_FUSE=true               # for ftp:// *NOT* ntfs-3g
DISABLE_NTFS=true
DISABLE_USB=true
DISABLE_FAT=true
MINIMAL=true                    # for local media, LABEL=xxx detection
