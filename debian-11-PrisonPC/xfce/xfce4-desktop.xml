<?xml version="1.0" encoding="UTF-8"?>

<channel name="xfce4-desktop" version="1.0" unlocked="root">
  <property name="backdrop" type="empty">
    <property name="single-workspace-mode" type="bool" value="true" />
    <property name="single-workspace-number" type="int" value="0" />
    <property name="screen0" type="empty">
      <property name="monitor0" type="empty">
        <!-- If prison provides a site.dir/wallpaper.jpg, use it (zoomed to fit, i.e. image-style=5). -->
        <property name="image-path" type="string" value="/wallpaper.jpg"/>
        <property name="image-style" type="int" value="5"/>
        <!-- If prison lacks a site.dir/wallpaper.jpg, use a flat color.
             The default color is #152233; it is the xfdesktop default.
             I cannot find where it is defined in the source code.
             https://codesearch.debian.net/search?q=%23152233&literal=1
             This is how it looks in current notation:

                <property name="rgba1" type="array">
                  <value type="double" value="0.082353"/>
                  <value type="double" value="0.133333"/>
                  <value type="double" value="0.200000"/>
                  <value type="double" value="1.000000"/>
                </property>

             The xfdesktop app suggest colors from this palette:
             https://developer.gnome.org/hig/reference/palette.html
             https://apps.gnome.org/app/org.gnome.design.Palette/
             This is the blue-3 (the middle one).

               <property name="rgba1" type="array">
                 <value type="double" value="0.109804"/>
                 <value type="double" value="0.443137"/>
                 <value type="double" value="0.847059"/>
                 <value type="double" value="1.000000"/>
               </property>

             This is #204a87 from PrisonPC-menu.svg, which is ultimately from Tango.
             It's definitely too dark!

               <property name="rgba1" type="array">
                 <value type="double" value="0.125490"/>
                 <value type="double" value="0.290196"/>
                 <value type="double" value="0.529412"/>
                 <value type="double" value="1.000000"/>
               </property>
        -->
        <property name="color-style" type="int" value="0"/>
        <property name="rgba1" type="array">
          <value type="double" value="0.109804"/>
          <value type="double" value="0.443137"/>
          <value type="double" value="0.847059"/>
          <value type="double" value="1.000000"/>
        </property>
      </property>
    </property>
  </property>
  <!-- Show no icons on the desktop.  -->
  <property name="desktop-icons" type="empty">
    <property name="style" type="int" value="0"/>
  </property>
  <!-- Show no right-click applications menu on the desktop. -->
  <property name="desktop-menu" type="empty">
    <property name="show" type="bool" value="false"/>
    <property name="show-icons" type="bool" value="true"/>
  </property>
  <!-- Show no middle-click windows menu on the desktop. -->
  <property name="windowlist-menu" type="empty">
    <!-- This MUST be disabled; it lets inmates add workspaces,
         even though xfwm4/general/workspace_count=1 is locked!
         https://en.wikipedia.org/wiki/Boss_key#Alternatives -->
    <property name="show-add-remove-workspaces" type="bool" value="false" unlocked="root"/>
    <property name="show" type="bool" value="false"/>
  </property>
</channel>
